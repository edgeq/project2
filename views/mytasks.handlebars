<div class="column">
<section class="hero is-info welcome is-small">
        <div class="hero-body">
          <div class="container">
            <h1 class="title main">
                Personal Task List
              </h1>
            <h2 class="subtitle main">
                See your Task List below
              </h2>
          </div>
        </div>
      </section>
      <br>
      <section class="info-tiles">
        <div class="tile is-ancestor has-text-centered">
          <div class="tile is-parent">
            <article class="tile is-child box">
              <p class="title">{{#each completedCount}}{{this.dataValues.sum_points}}{{/each}}</p>
              <p class="subtitle">Score</p>
            </article>
          </div>
          <div class="tile is-parent">
            <article class="tile is-child box">
              <p class="title">{{#each completedCount}}{{this.dataValues.completed_tasks}}{{/each}}</p>
              <p class="subtitle">Total Tasks Completed</p>
            </article>
          </div>
          <div class="tile is-parent">
            <article class="tile is-child box">
              <p class="title">{###}</p>
              <p class="subtitle">Remaining Tasks</p>
            </article>
          </div>
