          <div class="columns">
        <div class="column is-12">
          <div class="card">
            <div class="card-table">
              <div class="content">
                <table class="table is-fullwidth is-striped">
                  <tbody>
                    <tr>
                      <th>Task</th>
                      <th>Due Date</th>
                      <th>Points</th>
                      <th>Completed?</th>
                    </tr>
                    {{#each tasks}}
                      <tr>
                        <td>{{this.description}}</td>
                        <td>{{this.date_due}}</td>
                        <td>{{this.points}}</td>
                        {{#if this.completed}}
                          <td><a class="button is-small is-primary" href="#">Completed!</a></td>
                        {{/if}}
                        {{#unless this.completed}}
                          <td><a class="button is-small is-danger" href="#">Incomplete</a></td>
                        {{/unless}}
                      </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
