<div class="column">
  <section class="hero is-info welcome is-small">
    <div class="hero-body">
      <div class="container">
        <h1 class="title main">
                Hello, Roomie.
              </h1>
        <h2 class="subtitle main">
                Create or Sign up for chores below.
              </h2>
      </div>
    </div>
  </section>

  <br>

  <div class="columns">
    <div class="column is-4">
      <div class="card">
        <header class="card-header">
          <p class="card-header-title">
            Leaderboard
          </p>

        </header>
        <div class="card-table">
          <div class="content">
            <table class="table is-fullwidth is-striped">
              <tbody>

                <th> Roomie </th>
                <th> Total Points </th>
                {{#each leaders}}
                  <tr>


                    <td>{{this.dataValues.first_name}} {{this.dataValues.last_name}} </td>
                    <td> {{this.dataValues.sum_points}} </td>
                  </tr>
                {{/each}}

              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="column is-4">
      <div class="card events-card">
        <header class="card-header">
          <p class="card-header-title">
            Assigned Chores
          </p>

        </header>
        <div class="card-table">
          <div class="content">
            <table class="table is-fullwidth is-striped">
              <tbody>

                <th> Task </th>
                <th> Assignee </th>
                {{#each chores}}
                  {{#if this.claim}}
                    <tr>
                      <td>{{this.description}} </td>
                      <td> {{this.dataValues.User.first_name}} {{this.dataValues.User.last_name}} </td>
                      {{#if this.completed}}
                        <td><a class="button is-small is-primary" href="#">Complete</a></td>
                      {{/if}}
                      {{#unless this.completed}}
                        <td><a id="incomplete-btn" class="button is-small is-danger" href="#">Incomplete</a></td>
                      {{/unless}}
                  {{/if}}
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="column is-4">
      <div class="card events-card">
        <header class="card-header">
          <p class="card-header-title">
            Unassigned Chores
          </p>

        </header>
        <div class="card-table">
          <div class="content">
            <table class="table is-fullwidth is-striped">
              <tbody>

                <th> Task </th>
                <th> Points </th>
                <th> Due Date </th>


                {{#each chores}}
                  {{#unless this.claim}}

                    <td>{{this.description}}</td>
                    <td>{{this.points}}</td>
                    <td>{{this.date_due}}</td>
                    <td><a id= {{this.id}} class="button is-small is-info" href="#">Claim</a></td>
                  {{/unless}}
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>

      </div>
    </div>
